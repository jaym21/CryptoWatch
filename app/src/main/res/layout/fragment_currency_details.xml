<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.detail.CurrencyDetailsFragment"
    android:background="@color/black"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivBackButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_back_arrow"
        app:tint="@color/white"/>

    <LinearLayout
        android:id="@+id/llCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ivBackButton"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/ivCurrencyIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/tvCurrencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_semibold"
            tools:text="Bitcoin"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCurrencyPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/llCurrency"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/cvPriceChange"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvCurrentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="300000000000"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="1"
            android:maxLength="12"/>

        <TextView
            android:id="@+id/tvConvertedToCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="INR"
            android:textSize="16sp"
            android:textColor="@color/white_alpha_70"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPriceChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/llPeriodButtons"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/ivChangeIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                tools:src="@drawable/ic_trending_up"
                tools:tint="@color/green"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tvPercentChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="16.2%"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/green"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llPeriodButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/llCurrencyPrice"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOneDay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="0dp"
            android:text="1d"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            android:layout_marginStart="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSevenDays"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="0dp"
            android:text="7d"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            android:layout_marginStart="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOneMonth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="0dp"
            android:text="1m"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            android:layout_marginStart="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSixMonths"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="0dp"
            android:text="6m"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            android:layout_marginStart="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOneYear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="0dp"
            android:text="1y"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llPeriodButtons"
        android:layout_marginTop="16dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>